<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="agendaepn.epn.edu.ec.agendaepn2015.PrincipalActivity"
    android:background="@android:color/white">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acerca_de"
        android:id="@+id/btnacerca"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/ibtnactualizar"
        android:src="@drawable/actualizar"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/ibtnver"
        android:layout_toStartOf="@+id/ibtnver"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/ibtnver"
        android:src="@drawable/ver"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/ibtnanadir"
        android:layout_toLeftOf="@+id/ibtnanadir"
        android:layout_toStartOf="@+id/ibtnanadir"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/ibtnanadir"
        android:src="@drawable/agregar"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/btnacerca"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstmaterias"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@color/common_signin_btn_default_background"
        android:layout_above="@+id/ibtnactualizar"
        android:layout_marginBottom="50dp" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="400dp"
        android:datePickerMode="spinner" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/ibtnLanzarQR"
        android:src="@drawable/lanzoqr"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/btnacerca"
        android:layout_toLeftOf="@+id/ibtnactualizar"
        android:layout_toStartOf="@+id/ibtnactualizar"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView2"
        android:layout_above="@+id/btnacerca"
        android:layout_alignRight="@+id/btnacerca"
        android:layout_alignEnd="@+id/btnacerca" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/datopasado"
        android:layout_above="@+id/ibtnactualizar"
        android:layout_alignLeft="@+id/ibtnLanzarQR"
        android:layout_alignStart="@+id/ibtnLanzarQR" />

</RelativeLayout>
